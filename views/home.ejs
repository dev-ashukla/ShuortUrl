<!DOCTYPE html>
<html lang="en">
  <head> </head>

  <body>
    <h1>URL Shortner</h1>
    <% if (locals.id) { %>
    <p>URL Generated : http://localhost:4001/url/<%= id %></p>
    <% } %>
    <div>
      <form method="POST" action="/url">
        <label>Enter your original URL</label>
        <input type="text" name="url" placeholder="https://example.com" />
        <button type="submit">Generate URL</button>
      </form>
    </div>
    <p > </p>
    <div>
      <% if (locals.urls) { %>
      <table>
        <tr>
          <thead>
            <th>S. no.</th>
            <th>Short URL</th>
            <th>Redirect URL</th>
            <th>Clicks</th>
          </thead>
        </tr>
        <tbody>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td>http://localhost:4001/url/<%= url.shortId %></td>
            <td><%= url.redirectUrl %></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <p><h3>total url <%=  %></h3></p>
      <% } %>
    </div>
  </body>
</html>
